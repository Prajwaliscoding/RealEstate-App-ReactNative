{
  // "expo": { ... }
  // The top-level config object.

  "expo": {
    "name": "RealEstate-App-ReactNative",        // the display name (shows under the icon on your phone).
    "slug": "realestate",                        // a unique identifier for Expo services (like your project URL).
    "version": "1.0.0",                          // your app’s version number.
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",          // app icon file (the little square on your home screen).
    "scheme": "restate",                         // WhatsApp uses whatsapp://send?phone=123456789 → opens a chat
                                                 // whatsapp is the scheme
                                                 
    "userInterfaceStyle": "automatic",           // means follow system (light/dark mode).
    "newArchEnabled": true,                      // Turns on React Native’s new architecture (faster, modern under-the-hood stuff). You don’t need to touch it, but it improves performance.
   
    "ios": {
      "supportsTablet": true                     // App will run on iPads as well as iPhones.
    },
   
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },

    "web": {
      "output": "static",
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png" // A favicon is just a tiny icon shown in the browser tab (and sometimes bookmarks).
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "resizeMode": "cover",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          },
          "enableFullScreenImage_legacy":true

        }
      ],
      [
        "expo-font", 
        {
          "fonts" : 
          [
            "./assets/fonts/Rubik-Bold.ttf",
            "./assets/fonts/Rubik-ExtraBold.ttf",
            "./assets/fonts/Rubik-Light.ttf",
            "./assets/fonts/Rubik-Medium.ttf",
            "./assets/fonts/Rubik-Regular.ttf",
            "./assets/fonts/Rubik-SemiBold.ttf"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
